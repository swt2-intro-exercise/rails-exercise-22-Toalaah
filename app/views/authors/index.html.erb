<%= stylesheet_link_tag "application" %>
<h1>Authors Index Page</h1>
<p id="notice"><%= notice %></p>
<h2>List of all Authors</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th colspan="2"></th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= link_to author.homepage, author %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Delete', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br>

<%= link_to 'New author', new_author_path %>

